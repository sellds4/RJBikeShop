dashboard-header
.page-content
    dashboard-menu-bar
    .bikes-container
        .search-container
            img(src="/Static/app/img/search-icon.png")
            input(ng-model="bikeSearchText")
        .add-bikes(ng-show="view.addBike")
            form(ng-submit="addBiketoDB()")
                input(ng-model="newBike.make")
                input(ng-model="newBike.model")
                input(ng-model="newBike.type")
                input(ng-model="newBike.size")
                input(ng-model="newBike.year")
                input(ng-model="newBike.price")
                input(ng-model="newBike.cost")
                input(ng-model="newBike.colorString")
                input(ng-model="newBike.genderString")
        .bikes-list(ng-show="view.list")
            table
                tr
                    th Make
                    th Model
                    th Type
                    th Size
                    th Year
                    th Price
                    th Color
                    th Gender
                    th.edit-col Edit?
                    th.delete-col Delete?
                tr(ng-repeat="bike in bikes | filter: bikeSearchText")
                    td {{bike.MakeString}}
                    td {{bike.Model}}
                    td {{bike.BikeTypeString}}
                    td {{bike.FrameSize}}
                    td {{bike.Year}}
                    td {{bike.Price | currency}}
                    td {{bike.ColorString}}
                    td {{bike.GenderString}}
                    td
                        img.edit-icon(ng-click="toggleModal(bike)", src="/Static/app/img/edit-icon.png")
                    td
                        img.red-x(ng-click="deleteBike(bike.Id)", src="/Static/app/img/red-x.png")
        .bikes-cards(ng-show="!view.list")
            .card-container(ng-repeat="bike in bikes")
                .corner-icons
                    img.red-x-small(ng-click="deleteBike(bike.Id)", src="/Static/app/img/red-x.png")
                    img.edit-icon-small(ng-click="editBike(bike)", src="/Static/app/img/edit-icon.png")
                .bike-pic(style="height:150px")
                .description-container
                    table
                        tr
                            th Make:
                            td {{bike.MakeString}}
                            th Model:
                            td {{bike.Model}}
                        tr
                            th Type:
                            td {{bike.BikeTypeString}}
                            th Size:
                            td {{bike.FrameSize}} + '"'
                        tr
                            th Year:
                            td {{bike.Year}}
                            th Price:
                            td {{bike.Price | currency}}
                        tr
                            th Color:
                            td {{bike.ColorStringString}}
                            th Gender:
                            td {{bike.GenderString}}
    modal-dialog(show="modalShown", width="80%", height="60%")
        .bike-info-container
            .intro Please enter the bike information below
            .form-container
                form(name="newBikeForm", ng-submit="submitBike()")
                    .input-container
                        .input-label Make
                        input(type="text", ng-model="newBike.make", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Model
                        input(type="text", ng-model="newBike.model", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Type
                        input(type="text", ng-model="newBike.type", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Size
                        input(type="text", ng-model="newBike.size", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Year
                        input(type="text", ng-model="newBike.year", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Price
                        input(type="text", ng-model="newBike.price", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Color
                        input(type="text", ng-model="newBike.color", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Gender
                        input(type="text", ng-model="newBike.gender", ng-required="true", autocomplete="off")
                    .button-container
                        button(type="submit", ng-disabled="newBikeForm.$invalid") Submit

