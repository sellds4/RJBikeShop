dashboard-header
.page-content
    dashboard-menu-bar
    .bikes-container
        .search-container
            img(src="/Static/app/img/search-icon.png")
            input(ng-model="bikeSearchText")
        .bikes-list(ng-show="view.list")
            table
                tr
                    th Make
                    th Model
                    th Type
                    th Size
                    th Year
                    th Price
                    th Color
                    th Gender
                    th.edit-col Edit?
                    th.delete-col Delete?
                tr(ng-repeat="bike in bikes | filter: bikeSearchText")
                    td {{bike.MakeString}}
                    td {{bike.Model}}
                    td {{bike.BikeTypeString}}
                    td {{bike.FrameSize}}
                    td {{bike.Year}}
                    td {{bike.Price | currency}}
                    td {{bike.ColorString}}
                    td {{bike.GenderString}}
                    td
                        img.edit-icon(ng-click="toggleModal(bike)", src="/Static/app/img/edit-icon.png")
                    td
                        img.red-x(ng-click="deleteBike(bike.Id)", src="/Static/app/img/red-x.png")
        .bikes-cards(ng-show="!view.list")
            .card-container(ng-repeat="bike in bikes")
                .corner-icons
                    img.red-x-small(ng-click="deleteBike(bike.Id)", src="/Static/app/img/red-x.png")
                    img.edit-icon-small(ng-click="editBike(bike)", src="/Static/app/img/edit-icon.png")
                .bike-pic(style="height:150px")
                .description-container
                    table
                        tr
                            th Make:
                            td {{bike.MakeString}}
                            th Model:
                            td {{bike.Model}}
                        tr
                            th Type:
                            td {{bike.BikeTypeString}}
                            th Size:
                            td {{bike.FrameSize}} + '"'
                        tr
                            th Year:
                            td {{bike.Year}}
                            th Price:
                            td {{bike.Price | currency}}
                        tr
                            th Color:
                            td {{bike.ColorString}}
                            th Gender:
                            td {{bike.GenderString}}
    modal-dialog(show="modalShown", height="550px")
        .bike-info-container
            .intro Please enter the bike information below
            .form-container
                form(name="newBikeForm", ng-submit="submitBike()")
                    .input-container
                        .input-label Make:
                        input(type="text", name="new-bike-make", ng-model="newBike.MakeString", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Model:
                        input(type="text", name="new-bike-model", ng-model="newBike.Model", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Type:
                        input(type="text", name="new-bike-type", ng-model="newBike.BikeTypeString", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Size:
                        input(type="text", name="new-bike-size", ng-model="newBike.FrameSize", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Year:
                        input(type="text", name="new-bike-year", ng-model="newBike.Year", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Price:
                        input(type="number", name="new-bike-price", ng-model="newBike.Price", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Color:
                        input(type="text", name="new-bike-color", ng-model="newBike.ColorString", ng-required="true", autocomplete="off")
                    .input-container
                        .input-label Gender:
                        input(type="text", name="new-bike-gender", ng-model="newBike.GenderString", ng-required="true", autocomplete="off")
                    .button-container
                        .checkbox-container
                            .input-label Bike Sold 
                            input(type="checkbox", name="new-bike-sold", ng-model="newBike.Sold")
                        button(type="submit", ng-disabled="newBikeForm.$invalid") Submit

