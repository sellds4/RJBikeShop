.bikes-container
    .search-container
        .form-group
            margin: 20px 0 0 0
            img
                height 20px
                position absolute
                padding: 2px 0 0 5px
            input
                line-height 24px
                text-indent 30px
    .delete-col
        width 60px
    .red-x, .edit-icon
        height 20px
        padding-top 4px
        cursor: pointer
    .bike-list-container
        @media(min-width: 600px)
            padding-bottom 5%
        @media(max-width: 599px)
            padding-bottom 15%
    .card-container
        position relative
        border-radius 5px
        border 1px solid darkgrey
        box-shadow 3px 3px 5px #888888
        box-sizing border-box
        margin-bottom: 10px
        .corner-icons
            top 5px
            right 5px
            position absolute
        .red-x-small, .edit-icon-small
            float right
            height 15px
            cursor pointer
        .edit-icon-small
            margin-right: 7px
+desktop()
    .card-container
        col(1/3, cycle:3)
+tablet()
    .card-container
        col(1/2, uncycle: 3, cycle: 2)

+tablet-portrait-below()
    .card-container
        stack()
