table
    width 100%
.bikes-list
    overflow-x scroll
    table
        :nth-child(odd)
            background-color: lightgrey
        tr
            height 30px
            td
                text-align center
.delete-col
    width 60px
.red-x, .edit-icon
    height 20px
    padding-top 4px
    cursor: pointer
.card-container
    position relative
    border-radius 5px
    border 1px solid darkgrey
    box-shadow 3px 3px 5px #888888
    box-sizing border-box
    margin-bottom: 10px
    .corner-icons
        top 5px
        right 5px
        position absolute
    .red-x-small, .edit-icon-small
        float right
        height 15px
        cursor pointer
    .edit-icon-small
        margin-right: 7px
+desktop()
    .bikes-container
        col(7/8, offset: 1/8)
    .card-container
        col(1/3, cycle:3)
+tablet()
    .bikes-container
        col(7/8, offset: 1/8)
    .card-container
        col(1/2, uncycle: 3, cycle: 2)

+tablet-portrait-below()
    .bikes-container
        width: 100%
    .card-container
        stack()
