@import bootstrap
@import queries
@import variables
@import form
@import dashboard
@import dashboard-header
@import dashboard-menu-bar
@import nav-bar
@import modal

// All screen sizes 
body
    margin 0
h1, h2, h3, h4, p, span
    margin 0
input, select
    border-radius 5px
    border 1px solid darkgrey
    font-size 14px
    height 20px
button
    color white
    font-size 16px
    background-color $dark-blue
    border-radius 5px
    padding 7px 20px
    cursor pointer
    &:active
        background-color $dark-blue-active
.grey-button
    background-color grey !important
